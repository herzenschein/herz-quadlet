[Unit]
Description=Tag-based music streaming server
Documentation=https://www.navidrome.org/
Documentation=https://www.navidrome.org/docs/installation/docker/

[Container]
Image=docker.io/deluan/navidrome:latest
ContainerName=navidrome
AutoUpdate=registry
#Notify=true
LogDriver=journald

PublishPort=4533:4533
Volume=navidrome-data:/data:z
Volume=/path/to/your/music:/music:ro,z

[Service]
Restart=on-success

[Install]
WantedBy=default.target
