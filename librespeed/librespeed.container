[Unit]
Description=JS-only speed test
Documentation=https://librespeed.org/
Documentation=https://github.com/librespeed/speedtest/blob/master/doc_docker.md

[Container]
Image=ghcr.io/librespeed/speedtest:latest
ContainerName=librespeed
AutoUpdate=registry
#Notify=true
LogDriver=journald

PublishPort=8080:80

Environment=TITLE=LibreSpeed

[Service]
Restart=on-success

[Install]
WantedBy=default.target
