[Unit]
Description=Web interface to scan websites for vulnerabilities and improvements
Documentation=https://web-check.xyz/
Documentation=https://web-check.xyz/self-hosted-setup

[Container]
Image=docker.io/lissy93/web-check:latest
ContainerName=web-check
AutoUpdate=registry
#Notify=true
LogDriver=journald

PublishPort=3000:3000

[Service]
Restart=on-success

[Install]
WantedBy=default.target
