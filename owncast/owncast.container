[Unit]
Description=Single-user video streaming service federated across the Fediverse
Documentation=https://owncast.online/
Documentation=https://owncast.online/quickstart/container/

[Container]
Image=docker.io/owncast/owncast:latest
ContainerName=owncast
AutoUpdate=registry
#Notify=true
LogDriver=journald

PublishPort=8080:8080
PublishPort=1935:1935

Volume=owncast-data:/app/data:Z

[Service]
Restart=on-success

[Install]
WantedBy=default.target
